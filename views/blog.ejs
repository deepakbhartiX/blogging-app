<!DOCTYPE html>
<html lang="en">
<head>
   <%- include('./partials/head') %>
   <title>Blog</title>

</head>
<body>
    <%- include('./partials/nav') %>

    <div class="container mt-4">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImageURL %>" width="700px">
        <pre class="mt-3"><%= blog.body %></pre>
    </div>


    <div class="container mt-4">
        <img src="<%= blog.createdBy.profileImageURL %>" width="50px" > <%= blog.createdBy.fullname %>


    </div>

    <div class="container mt-3">
     <h1>Comment (<%= comments.length %>)</h1>


     <% if (locals.user) { %>
           <form action="/comment/<%= blog._id %>" method="post">
            <div class="mb-3">
                <input type="text" name="content" class="form-control" placeholder="Enter your comment here." >
                <button class="btn  btn-primary mt-3" type="submit">Add</button>

            </div>
        </form>
       
     <% } %>
        
     <% comments.forEach(comment => { %>
        <div class="container mt-4">
        <img src="<%= comment.createdBy.profileImageURL%>" width="50px" > <%= comment.createdBy.fullname %> <h5> <%= comment.content %></h5>
        </div>

     <% }) %>

    </div>

    <%- include('./partials/script') %>


</body>

</html>